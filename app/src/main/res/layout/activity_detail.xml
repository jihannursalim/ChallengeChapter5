<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/detailjudulnews"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="Challenge Chapter 5"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/detail_imgnews"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/detailjudulnews"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp"
        android:src="@drawable/km4" />

    <TextView
        android:id="@+id/detailtglnews"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="2023-05-05T16:56:59.231Z"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/detail_imgnews"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/authornews"
        android:textSize="20sp"
        android:textColor="@color/teal_200"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Jihan Khairunnisa"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/detailtglnews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@id/authornews"
        android:id="@+id/newsdesc"
        android:text="Membuat sebuah movie catalog dengan menggunakan retrofit API, firebase authentication, firebase crashlityc, material design, dan localization dalam 2 bahasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>